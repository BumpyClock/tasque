{
  "name": "tasque",
  "version": "0.1.0",
  "module": "src/main.ts",
  "type": "module",
  "private": true,
  "bin": {
    "tsq": "src/main.ts"
  },
  "scripts": {
    "dev": "bun run src/main.ts",
    "build": "bun build src/main.ts --compile --outfile dist/tsq",
    "release": "bun run scripts/release.ts",
    "release:verify-version": "bun run scripts/release-version.ts",
    "version:bump": "bun run scripts/version-bump.ts",
    "typecheck": "bunx tsc --noEmit",
    "lint": "bunx @biomejs/biome check .",
    "fmt": "bunx @biomejs/biome format --write .",
    "rust:fmt": "cd src-rust && cargo fmt",
    "rust:fmt:check": "cd src-rust && cargo fmt -- --check",
    "rust:lint": "cd src-rust && cargo clippy --all-targets --all-features -- -D warnings",
    "rust:test": "cd src-rust && cargo test --quiet",
    "doctor:rust": "bun run rust:fmt:check && bun run rust:lint && bun run rust:test",
    "test": "bun run build && bun test",
    "test:fast": "bun run build && bun run scripts/test-parallel.ts",
    "doctor": "bun run typecheck && bun run fmt && bun run lint && bun run build && bun test"
  },
  "dependencies": {
    "commander": "^14.0.2",
    "picocolors": "^1.1.1",
    "ulid": "^3.0.1",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/bun": "latest",
    "typescript": "^5.9.2"
  }
}
